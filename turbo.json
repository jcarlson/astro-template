{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "astro:check": {
      "dependsOn": ["astro:sync"]
    },
    "astro:build": {
      "dependsOn": ["astro:sync"],
      "outputs": ["dist/**"]
    },
    "astro:dev": {
      "cache": false,
      "dependsOn": ["astro:sync"],
      "persistent": true
    },
    "astro:preview": {
      "cache": false,
      "dependsOn": ["astro:build"],
      "persistent": true
    },
    "astro:sync": {
      "outputs": [".astro/**"]
    },
    "build": {
      "dependsOn": ["astro:build", "storybook:build"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "with": ["astro:dev", "storybook:dev"]
    },
    "storybook:build": {
      "outputs": ["storybook-static/**"]
    },
    "storybook:dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["test:checks", "test:e2e", "test:storybook", "test:unit"]
    },
    "test:checks": {
      "dependsOn": [
        "astro:check",
        "eslint:check",
        "prettier:check",
        "stylelint:check"
      ]
    },
    "test:e2e": {
      "outputs": [
        "playwright-report/index.html",
        "test-results/**"
      ]
    }
  },
  "ui": "tui"
}
