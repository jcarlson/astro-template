{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "astro:check": {
      "dependsOn": ["sync"]
    },
    "build": {
      "dependsOn": ["sync"],
      "outputs": ["dist/**"]
    },
    "ci": {
      "dependsOn": ["checks", "test:unit", "test:e2e"]
    },
    "dev": {
      "cache": false,
      "dependsOn": ["sync"],
      "persistent": true
    },
    "checks": {
      "dependsOn": [
        "astro:check",
        "eslint:check",
        "prettier:check",
        "stylelint:check"
      ]
    },
    "preview": {
      "cache": false,
      "dependsOn": ["build"],
      "persistent": true
    },
    "sync": {
      "outputs": [".astro/**"]
    },
    "test:e2e": {
      "outputs": [
        "playwright-report/index.html",
        "test-results/**"
      ]
    }
  },
  "ui": "tui"
}
